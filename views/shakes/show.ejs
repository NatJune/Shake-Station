<%- include('../partials/header') %>

<section id="show-page">
  <div>Product Type: </div>
  <div><%= shake.productType %></div>
  <div>Flavor: </div>
  <div><%= shake.flavor %></div>
  <div>Rating: </div>
  <div><%= shake.rating %></div>
  <div>Calories: </div>
  <div><%= shake.calories %></div>
  <div>Quality: </div>
  <div><%= shake.quality ? 'Yes' : 'Nope' %></div>
</section>

<h2>Reviews</h2>
<form action="/shakes/<%= shake._id %>/reviews" id="add-review-form" method="POST">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
  <input type="submit" value="Add Review">
</form>


<% if(shake.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% shake.reviews.forEach(review => { %>
        <tr>
          <td><%= review.createdAt%></td>
          <td><%= review.content %></td>
          <td><%= review.rating %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>
  
<%- include('../partials/footer') %>